type Node struct {
	id *ID
}

func NewNode(id *ID) Node {
	return Node{
		id: id,
	}
}

func (n Node) ID() *ID {
	return n.id
}

// Edge describes an edge between two Node elements.
// It may have its own fields.
type Edge struct {
	id *ID
}

func NewEdge(id *ID) Edge {
	return Edge{
		id: id,
	}
}

func (e Edge) ID() *ID {
	return e.id
}

