package lib

import (
	"{{.GenerateOutPath}}/sombase"
)

type ID[M any] struct {
	key  Key[M]
	node string // TODO!
}

func NewID[M any](key Key[M], node string) *ID[M] {
	return &ID[M]{key: key, node: node}
}

func (b *ID[M]) Equal(val *sombase.ID) Filter[M] {
	// val = b.node + ":" + val
	return b.key.op(OpEqual, val)
}

func (b *ID[M]) NotEqual(val *sombase.ID) Filter[M] {
	// val = b.node + ":" + val
	return b.key.op(OpNotEqual, val)
}

func (b *ID[M]) In(vals []*sombase.ID) Filter[M] {
	return b.key.op(OpIn, vals)
}

func (b *ID[M]) NotIn(vals []*sombase.ID) Filter[M] {
	return b.key.op(OpNotIn, vals)
}
